gfx/menus/scrollbar
{
	nopicmip
	nomipmaps
    {
        map gfx/menus/scrollbar
        blendFunc GL_ONE GL_ONE
    }
}

gfx/menus/scrollbar_h
{
	nopicmip
	nomipmaps
    {
        map gfx/menus/scrollbar
        blendFunc GL_ONE GL_ONE
		tcMod transform 0 1 1 0 0 0
    }
}

gfx/menus/scrollbar_thumb
{
	nopicmip
	nomipmaps
    {
        clampmap gfx/menus/scrollbar_thumb
        blendFunc GL_ONE GL_ONE
    }
}